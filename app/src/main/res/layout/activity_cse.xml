<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".cse">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/book" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="160dp"
        android:fontFamily="serif"
        android:hint="Syllabus"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:orientation="vertical"

        >


        <Button
            android:id="@+id/cse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"
            android:text="1st Semester"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/cse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2nd Semester"
            android:layout_margin="5dp"
            app:cornerRadius="20dp"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"/>
        <Button
            android:id="@+id/cse3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3rd Semester"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:layout_margin="5dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"/>

        <Button
            android:id="@+id/cse4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4th Semester"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:layout_margin="5dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"/>
        <Button
            android:id="@+id/cse5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5th Semester"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            android:layout_margin="5dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"/>
        <Button
            android:id="@+id/cse6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6th Semester"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            app:cornerRadius="20dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"/>

        <Button
            android:id="@+id/cse7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7th Semester"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"
            />

        <Button
            android:id="@+id/cse8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8th Semester"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_bhaijaan"
            app:cornerRadius="20dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"/>
    </LinearLayout>

</RelativeLayout>